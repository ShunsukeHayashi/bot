# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://your-app-url.com/webhook

# Supabase Configuration
SUPABASE_URL=your_supabase_url
